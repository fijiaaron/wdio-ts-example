{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["es2019", "dom"],
        "esModuleInterop": true,
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "*": [ "./*" ],
            "src/*": ["./src/*"],
            "test/*": ["./test/*"]
        },
        "types": [
            "node", 
            "@wdio/sync", 
            "@wdio/mocha-framework",
            "@types/mocha"
        ],
        "typeRoots" : [
            "./node_modules/@types", 
            "./type-definitions-folder"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}